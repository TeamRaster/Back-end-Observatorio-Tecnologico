extends ../../layout/layoutIndex

block title
  title Demands

block main
  .row.center-xs
    p Puedes hacer el crud a las demandas pero aun hay bugs, a la hora de actualizar, y al eliminar no se elimina a la primera
  .row.center-xs
    a.waves-effect.waves-light.btn(href="/") Regresar al Inicio
  .row.center-xs
    .col-xs-10
      if (demands != "")
        table.highlight.centered
          thead
            tr
              th business
              th image
              th description
              th category
              th(colspan="3") crud
          tbody
            each demand in demands
              tr
                td #{demand.business}
                td #{demand.image}
                td #{demand.description}
                td #{demand.category}
                td: a.waves-effect.waves-light.btn.margin-small(href="/app/demands/" + demand._id + "/edit") Edit
                td: a.waves-effect.waves-light.btn.margin-small(href="/app/demands/" + demand._id) View
                td
                  form(method="POST" action="/app/demands/" + demand._id + "?_method=DELETE" enctype="multipart/form-data")
                    input.waves-effect.waves-light.btn.margin-small(type="submit", value="Delete")
      else
        h2 No hay demandas en la base de datos
