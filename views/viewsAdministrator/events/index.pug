extends ../../layout/layoutIndex

block title
  title Events Slider

block main
  .row.center-xs
    .col-xs-8
      h3 Events - Slider
  .row.center-xs
    a.waves-effect.waves-light.btn(href="/") Regresar al Inicio
    a.waves-effect.waves-light.btn.margin-small(href="/app/administrator/events/new") new
  .row.center-xs
    .col-xs-10
      if (events != "")
        table.highlight.centered
          thead
            tr
              th name
              th category
              th(colspan="3") crud
          tbody
            each event in events
              tr
                td #{event.name}
                td #{event.category}
                td: a.waves-effect.waves-light.btn.margin-small(href="/app/administrator/events/" + event._id + "/edit") Edit
                td: a.waves-effect.waves-light.btn.margin-small(href="/app/administrator/events/" + event._id) View
                td
                  form(method="POST" action="/app/administrator/events/" + event._id + "?_method=DELETE" enctype="multipart/form-data")
                    input.btn.margin-small(type="submit", value="Delete")
      else
        h3 No hay Images de Eventos en la base de datos
