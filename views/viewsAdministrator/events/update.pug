extends ../../layout/layoutIndex

block title
  title Events Slider

block main
  .row.center-xs
    .col-xs-8
      h3 Events - Slider Update
  .row.center-xs
    .col-xs-5
      form(method="POST" action="/app/administrator/events/" + event._id + "?_method=PUT" enctype="multipart/form-data")
        .input-field.col.s12
          label(for="category") Categoria:
          input(type="text", class="validate", name="category", id="category" value="" + event.category)
        .input-field.col.s12
          .file-field.input-field
            .btn
              span Imagen
              input(type="file", name="image", id="image")
            .file-path-wrapper
              input(type="text", class="file-path validate" name="imageName" value="" + event.name)
        div
          input(type="submit", class="btn", name="btn", id="btn", value="Actualizar")

