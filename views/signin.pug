extends ./layout/layoutIndex

block title
  title Inicio de Sesion

block main
  .row.center-xs
    .col-xs-8
      h3 Inicio de Sesion
  .row.center-xs
    .col-xs-2
      a(href="/auth/facebook" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect") Facebook
    .col-xs-2
      a(href="/auth/twitter" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect") Twitter
    .col-xs-2
      a(href="/auth/linkedin" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect") Linkedin
  .row.center-xs
    .col-xs-5
      p= error
  .row.center-xs
    .col-xs-5
      form(method="POST", name="form_sign_in", id="form_sign_in" action="/auth/local")
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          label(for="username" class="mdl-textfield__label") Nombre de Usuario:
          input(type="text", class="mdl-textfield__input", name="username", id="username")
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          label(for="password" class="mdl-textfield__label") Contrase√±a:
          input(type="password", class="mdl-textfield__input", name="password", id="password")
        div
          input(type="submit", class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", name="btn", id="btn", value="Enviar")

