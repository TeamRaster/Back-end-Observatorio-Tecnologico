extends ./layout/layoutIndex

block title
  title Registro de Usuarios

block main
  .row.center-xs
    .col-xs-8
      h3 Registrate
  .row.center-xs
    .col-xs-5
      form(method="POST", name="form_sign_in", id="form_sign_in" action="/accounts/local")
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          label(for="username" class="mdl-textfield__label") Nombre de Usuario:
          input(type="text", class="mdl-textfield__input", name="username", id="username")
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          label(for="email" class="mdl-textfield__label") Correo:
          input(type="email", class="mdl-textfield__input", name="email", id="email")
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          label(for="password" class="mdl-textfield__label") Contraseña:
          input(type="password", class="mdl-textfield__input", name="password", id="password")
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          label(for="password_confirmation" class="mdl-textfield__label") Repetir Contraseña:
          input(type="password", class="mdl-textfield__input", name="password_confirmation", id="password_confirmation")
        div
          input(type="submit", class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", name="btn", id="btn", value="Registrarse")

